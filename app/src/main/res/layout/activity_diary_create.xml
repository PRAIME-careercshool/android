<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light_gray"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- 상단 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:elevation="4dp"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/back_button"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:padding="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="새 영농일지 작성"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginEnd="16dp" />

        </LinearLayout>

        <!-- 재배지 선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재배지"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/areaSelector"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_input_background"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="재배지 선택 (등록 필지)"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/back_button"
                    android:rotation="270" />

            </LinearLayout>

        </LinearLayout>

        <!-- 날씨 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="날씨 (자동)"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_input_background"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_weather"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* 26°C 맑음"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- 재배작물 선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재배작물"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/cropSelector"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_input_background"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="작물선택"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/back_button"
                    android:rotation="270" />

            </LinearLayout>

        </LinearLayout>

        <!-- 재배활동 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재배활동"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- 첫 번째 행 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tag_pest_management"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/primary_button_background"
                    android:gravity="center"
                    android:text="병해충관리"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/tag_fertilizer_management"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/rounded_input_background"
                    android:gravity="center"
                    android:text="비료영양관리"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

            </LinearLayout>

            <!-- 두 번째 행 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tag_planting"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rounded_input_background"
                    android:gravity="center"
                    android:text="파종 및 정식"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/tag_cultivation_environment"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/rounded_input_background"
                    android:gravity="center"
                    android:text="재배환경"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

            </LinearLayout>

            <!-- 세 번째 행 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tag_growth_management"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rounded_input_background"
                    android:gravity="center"
                    android:text="생장관리"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/tag_harvest_preparation"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/rounded_input_background"
                    android:gravity="center"
                    android:text="수확준비"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

            </LinearLayout>

            <!-- 네 번째 행 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tag_harvest_work"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rounded_input_background"
                    android:gravity="center"
                    android:text="수확작업"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/tag_sorting_packaging"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/rounded_input_background"
                    android:gravity="center"
                    android:text="선별포장"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

            </LinearLayout>

            <!-- 다섯 번째 행 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tag_shipping_distribution"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/rounded_input_background"
                    android:gravity="center"
                    android:text="출하유통"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/tag_other_farm_work"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/rounded_input_background"
                    android:gravity="center"
                    android:text="기타농작업"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:textStyle="bold"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground" />

            </LinearLayout>

        </LinearLayout>

        <!-- 농약 검색 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="농약"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_input_background"
                android:gravity="center_vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/pesticideSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="농약 검색"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:clickable="true"
                    android:focusable="false" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/search"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 비료 검색 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비료"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_input_background"
                android:gravity="center_vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/fertilizerSearch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="비료 검색"
                    android:textSize="16sp"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:clickable="true"
                    android:focusable="false" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/search"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 기타 농작업 메모 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기타 농작업 메모"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/memoInput"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/rounded_input_background"
                android:gravity="top|start"
                android:hint="메모를 작성해주세요"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:padding="16dp"
                android:inputType="textMultiLine"
                android:maxLines="5" />

        </LinearLayout>

        <!-- 사진 업로드 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진 업로드"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- 촬영된 이미지 표시 영역 -->
            <ImageView
                android:id="@+id/capturedImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/photoUploadArea"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/camera"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="터치하여 사진 촬영"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- 하단 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginTop="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/pastel_green"
                    android:gravity="center"
                    android:text="저장"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/tab_unselected"
                    android:gravity="center"
                    android:text="취소"
                    android:textColor="@color/text_secondary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
